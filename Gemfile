source 'https://rubygems.org'
ruby '2.5.1'

# Web API
gem 'roda'
gem 'puma'
gem 'json'

# Configuration
gem 'econfig'
gem 'rake'

# Diagnostic
gem 'pry'

# Security
gem 'rbnacl-libsodium'

# Database
gem 'sequel'
gem 'hirb'
group :development, :test do
  gem 'sqlite3'
end

# DateTime
gem 'ruby-duration'

# Development
group :development do
  gem'rubocop'
end

# Testing
group :test do
  gem 'minitest'
  gem 'minitest-rg'
  gem 'rack-test'
end

group :development, :test do
  gem 'rerun'
  gem 'sequel-seed'
end
